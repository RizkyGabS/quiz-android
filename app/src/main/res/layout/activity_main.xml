<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D3D3D3"
    >


    <ImageView
        android:id="@+id/ivHomeIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:background="#ED3237"
        android:src="@drawable/home1"
        android:padding="12dp"/>

    <TextView
        android:id="@+id/tvPendaftaran"
        android:layout_toRightOf="@+id/ivHomeIcon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="0dp"
        android:background="#F4CC2D"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        android:text="Pendaftaran"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_below="@+id/tvPendaftaran"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:background="#00AFEF"
        android:src="@drawable/person"
        android:padding="5dp"/>

    <EditText
        android:id="@+id/etNama"
        android:layout_below="@+id/tvPendaftaran"
        android:layout_toRightOf="@+id/ivProfile"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="20dp"
        android:hint="Nama"
        android:background="#00A859"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etNim"
        android:layout_below="@+id/etNama"
        android:layout_toRightOf="@+id/ivProfile"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="20dp"
        android:hint="NIM"
        android:background="#00A859"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_below="@+id/etNim"
        android:layout_toRightOf="@+id/ivProfile"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="20dp"
        android:hint="Email"
        android:background="#00A859"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:inputType="textEmailAddress"/>

    <Button
        android:id="@+id/btnDaftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEmail"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:textAllCaps="false"
        android:text="Daftar"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:background="#3E4095"/>

</RelativeLayout>